<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:id="@+id/layoutkanban">
    <TextView
        android:text="STT"
        android:textSize="20px"
        android:textColor="#FFFFFF"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:background="#0000FF"
        android:id="@+id/textView1" />
    <TextView
        android:text="Needed Date"
        android:textSize="20px"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView1"
        android:id="@+id/textView2" />
    <TextView
        android:text="Line"
        android:textSize="20px"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView2"
        android:id="@+id/textView3" />
    <TextView
        android:text="Job No"
        android:textSize="20px"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView3"
        android:id="@+id/textView4" />
    <TextView
        android:text="Color"
        android:textSize="20px"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView4"
        android:id="@+id/textView5" />
    <TextView
        android:text="Size"
        android:textSize="20px"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView5"
        android:id="@+id/textView9" />
    <TextView
        android:text="PO No"
        android:textSize="20px"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView9"
        android:id="@+id/textView6" />
    <TextView
        android:text="QTY"
        android:textSize="20px"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView6"
        android:id="@+id/textView7" />
    <ListView
        android:minWidth="25px"
        android:minHeight="25px"
        android:background="#fff176"
        android:nestedScrollingEnabled="true"
        android:layout_width="wrap_content"
        android:layout_height="250px"
        android:layout_below="@id/textView1"
        android:id="@+id/listView1" />
    <TextView
        android:text="12/01/2021"
        android:textSize="20px"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_width="120px"
        android:layout_height="wrap_content"
        android:layout_below="@id/listView1"
        android:textAlignment="center"
        android:layout_marginTop="15px"
        android:id="@+id/txtdate" />
    <Button
        android:text="+"
        android:textSize="20px"
        android:layout_width="70px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtdate"
        android:layout_below="@id/listView1"
        android:layout_marginTop="5px"
        android:gravity="center"
        android:id="@+id/btdate" />
    <TextView
        android:text="SOAD2102/0026"
        android:textSize="20px"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/listView1"
        android:layout_toRightOf="@id/btdate"
        android:layout_marginTop="15px"
        android:id="@+id/txtjob" />
    <Button
        android:text=">>"
        android:textSize="20px"
        android:layout_width="70px"
        android:layout_height="wrap_content"
        android:layout_marginTop="5px"
        android:layout_toRightOf="@id/txtjob"
        android:layout_below="@id/listView1"
        android:gravity="center"
        android:id="@+id/btjob" />
    <TextView
        android:text="All Color"
        android:textSize="20px"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/listView1"
        android:layout_toRightOf="@id/btjob"
        android:layout_marginTop="15px"
        android:id="@+id/txtcolor" />
    <TextView
        android:text="All Size"
        android:textSize="20px"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/listView1"
        android:layout_toRightOf="@id/txtcolor"
        android:layout_marginTop="15px"
        android:layout_marginLeft="5px"
        android:id="@+id/txtsize" />
    <TextView
        android:text="All PO"
        android:textSize="20px"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/listView1"
        android:layout_toRightOf="@id/txtsize"
        android:layout_marginTop="15px"
        android:layout_marginLeft="5px"
        android:id="@+id/txtpo" />
    <TextView
        android:text="-vetPO-"
        android:textSize="20px"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/listView1"
        android:layout_toRightOf="@id/txtpo"
        android:layout_marginTop="15px"
        android:layout_marginLeft="5px"
        android:id="@+id/txtqty" />
    <ListView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="895.0px"
        android:layout_height="381.0px"
        android:background="#fff176"
        android:layout_below="@id/btdate"
        android:id="@+id/lstsumqty" />
    <Button
        android:text="ADD KANBAN"
        android:layout_width="278.0px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginTop="5px"
        android:layout_below="@id/listView1"
        android:layout_toRightOf="@id/txtqty"
        android:id="@+id/btadd" />
    <TextView
        android:text="SUPERMARKET WIP"
        android:textSize="20px"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:textAlignment="center"
        android:layout_width="372.0px"
        android:layout_height="wrap_content"
        android:layout_marginTop="0px"
        android:layout_marginLeft="10px"
        android:layout_below="@id/btadd"
        android:layout_toRightOf="@id/lstsumqty"
        android:id="@+id/textView8" />
    <ListView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="372.0px"
        android:layout_height="355.0px"
        android:layout_marginLeft="10px"
        android:layout_marginTop="5px"
        android:background="#fff176"
        android:layout_below="@id/textView8"
        android:layout_toRightOf="@id/lstsumqty"
        android:id="@+id/lstwip" />
</RelativeLayout>